<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextureView
        android:id="@+id/camera_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ie.yesequality.yesequality.views.CameraOverlayView
        android:id="@+id/camera_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" />

    <RelativeLayout
        android:id="@+id/rlSurfaceLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivWaterMarkPic"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_wm_vote_for_me"
            android:visibility="visible" />
    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/tbActionBar"
        style="?toolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/selfieButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:src="@drawable/ic_selfie" />

</FrameLayout>


